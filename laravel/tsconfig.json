{
    "extends": "./tsconfig.web.json",
    "include": ["resources/js/**/*.ts", "resources/js/**/*.vue"],
    "compilerOptions": {
      "types": ["./resources/js/shims-vue.d.ts"],
      "strict": true,
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]
      }
    }
  }